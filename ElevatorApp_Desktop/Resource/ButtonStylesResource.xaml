            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Path x:Name="path" Data="M71.727,1.5 C72.706201,1.5 73.5,2.2937991 73.5,3.273 L73.5,53.278 C73.5,54.257201 72.706201,55.051 71.727,55.051 L3.273,55.051 C2.2937991,55.051 1.5,54.257201 1.5,53.278 1.5,53.278 71.727,1.5 71.727,1.5 z" Stretch="Fill" Stroke="#FF7C0A0A" StrokeThickness="3" Margin="10.538,17.29,11.038,-10.71" RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
